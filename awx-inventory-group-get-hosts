# shellcheck disable=SC1090

DIR_BIN=$(dirname "$0") && source "$DIR_BIN/awx-common"

function usage()
{
cat << EOF
Usage:

\`\`\`bash

  $BIN INVENTORY GROUP

\`\`\`

Get hosts from group of inventory

Example:

\`\`\`bash

  $BIN pve dev

    spve01dev

\`\`\`

EOF
exit 0
}

[[ "$1" =~ ^[-]+(h|help) ]] && usage

[[ -z "$1" ]] && die "EMPTY INVENTORY"
INVENTORY="$1"

[[ -z "$2" ]] && die "EMPTY GROUP"
GROUP="$2"

GROUP_ID="$(group_get_id "$INVENTORY" "$GROUP")"

[[ -z "$GROUP_ID" ]] && die "NOT FOUND GROUP $GROUP"

JSON=$(mktemp --suffix .json)
awx-cli host list -f json -i "$INVENTORY" --group "$GROUP_ID" > "$JSON"

[[ -e "$JSON" ]] || die "NOT FOUND FILE $JSON"

JQ=".results[] | .name"

jq -r "$JQ" "$JSON"
