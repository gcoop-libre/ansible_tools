# shellcheck disable=SC2116,SC1090

DIR_BIN=$(dirname "$0") && source "$DIR_BIN/awx-common"

function usage()
{
cat << EOF

Usage:

  $BIN [branch]

Overwrite \`~/.tower_cli.cfg\` with enviroment config using
\`~/.awx-config\` and \`pass\` command for retrieve passwords to use
with \`awx-cli\`.

First copy \`.awx-config\` to \`~/.awx-config\`, customize variables
according your enviroment.

Example:

  $BIN develop

EOF
exit 0
}

[[ "$1" =~ ^[-]+(h|help) ]] && usage

[[ -z "$1" ]] && die "EMPTY ENVIROMENT"

ENV="${1^^}"

USR="${ENV}_USER"
AWX_ENV="$(echo "${!ENV}")"
AWX_USER="$(echo "${!USR}")"
ENV_PASS_DIR="${ENV}_PASS_DIR"
PASS_DIR="$(echo "${!ENV_PASS_DIR}")"
export PASSWORD_STORE_DIR="$PASS_DIR"
AWX_HOST=$(pass "$PASS_PREFIX/$AWX_ENV/host")
AWX_PASS=$(pass "$PASS_PREFIX/$AWX_ENV/${AWX_USER}_password")

[[ -z "$AWX_PASS" ]] && die "EMPTY AWX_PASS"

CONFIG=$(cat << EOF
host=$AWX_HOST
password=$AWX_PASS
username=$AWX_USER
verify_ssl=false
EOF
)

AWX_CFG="$HOME/.tower_cli.cfg"
echo "$CONFIG" > "$AWX_CFG" && chmod 600 "$AWX_CFG"
awx-setting-get-tower-url-base
awx-setting-get-custom-login-info
